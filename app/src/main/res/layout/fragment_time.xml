<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".timeFragment.TimeFragment">

    <com.analog.clock.view.ClockView
        android:id="@+id/clockView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:padding="40dp"/>

    <RadioGroup
        android:id="@+id/radioGroupTimePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp">

        <RadioButton
            android:id="@+id/radioButtonBigSizeClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Big size" />

        <RadioButton
            android:id="@+id/radioButtonMediumSizeClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium size" />

        <RadioButton
            android:id="@+id/radioButtonSmallSizeClock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small size" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>